-var menu = { Status: 'status', Tags: 'tags', Settings: 'settings', Log: 'log' };
-var page = 'Log';
nav.navbar.navbar-default
    div.collapse.navbar-collapse
        ul.menu.nav.navbar-nav
            each val, key in menu
                li
                    if page === key
                        a.selected(href=val, title=key)= key
                    else
                        a(href=val, title=key)= key
#content
    section#log
        h2 Log
        button(ng-click="resetLog()", class="btn btn-sm btn-danger") Reset
        table
            tr
                th.message Message
                th.level Level
                th.category Category
                th.timestamp Time
            tr(ng-repeat="logItem in log | orderBy: 'timestamp' | reverse")
                td.message {{logItem.message}}
                td.level {{logItem.level}}
                td.category {{logItem.category}}
                td.timestamp {{logItem.timestamp | date: 'medium'}}
        p(ng-show="!log.length" ng-cloak) Log is empty
        button(ng-click="resetLog()", class="btn btn-sm btn-danger") Reset