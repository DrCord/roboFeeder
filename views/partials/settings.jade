-var menu = { Status: 'status', Tags: 'tags', Settings: 'settings', Log: 'log' };
-var page = 'Settings';
nav.navbar.navbar-default
    div.collapse.navbar-collapse
        ul.menu.nav.navbar-nav
            each val, key in menu
                li
                    if page === key
                        a.selected(href=val, title=key)= key
                    else
                        a(href=val, title=key)= key
#content
    section#settings
        h2 Settings
        form(name="settingsForm", ng-submit="saveSettings()")
            div(ng-repeat="(name, value) in roboFeederSettings")
                label {{name}}
                    input(type="text", name="setting-{{name}}", ng-model="roboFeederSettings[name]", value="{{value}}")
            input(type="submit", value="Save Settings", class="btn btn-sm btn-success")
            button(ng-click="resetSettings()", class="btn btn-sm btn-danger") Reset Settings to Default